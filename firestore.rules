rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Clients data - only authenticated trainers can access
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }
    
    // Sessions data - only authenticated trainers can access
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    // Session recaps - only authenticated trainers can access
    match /sessionRecaps/{recapId} {
      allow read, write: if request.auth != null;
    }
    
    // Workout plans - only authenticated trainers can access
    match /workoutPlans/{planId} {
      allow read, write: if request.auth != null;
    }
    
    // Progress entries - only authenticated trainers can access
    match /progressEntries/{entryId} {
      allow read, write: if request.auth != null;
    }
    
    // Payments - only authenticated trainers can access
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
  }
}
