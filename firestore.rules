rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated trainers to access their own data
    match /trainers/{trainerId} {
      allow read, write: if request.auth != null &&
        (request.auth.token.email == trainerId || request.auth.uid == trainerId);

      // Allow access to subcollections (clients, sessions, payments)
      match /{collection}/{document} {
        allow read, write: if request.auth != null &&
          (request.auth.token.email == trainerId || request.auth.uid == trainerId);
      }
    }

    // Allow users to create their trainer profile
    match /trainers/{trainerId} {
      allow create: if request.auth != null &&
        (request.auth.token.email == trainerId || request.auth.uid == trainerId);
    }
  }
}
    match /sessionRecaps/{recapId} {
      allow read, write: if request.auth != null;
    }

    // Workout plans - only authenticated trainers can access
    match /workoutPlans/{planId} {
      allow read, write: if request.auth != null;
    }

    // Progress entries - only authenticated trainers can access
    match /progressEntries/{entryId} {
      allow read, write: if request.auth != null;
    }

    // Payments - only authenticated trainers can access
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
  }
}
